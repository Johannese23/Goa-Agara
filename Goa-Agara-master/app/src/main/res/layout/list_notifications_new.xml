<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:minWidth="250dp"
        android:minHeight="150dp"
        android:id="@+id/imgNotification"
        android:src="@drawable/ic_search_foreground"/>
    <TextView
        android:layout_width="match_parent"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="@font/worksans_regular"
        android:textColor="@color/black"
        android:id="@+id/titleNotification"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Program Hidroponik Sayur  Cukupi Kebutuhan Desa..."/>

    <TextView
        android:id="@+id/descNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:fontFamily="@font/worksans_light"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:text="Program hidroponik sayuran mampu mencukupi kebutuhan masyarakat Desa Bambel Aceh Tenggara."
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/green1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baca selengkapnya "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="Love"/>
    </LinearLayout>

</LinearLayout>