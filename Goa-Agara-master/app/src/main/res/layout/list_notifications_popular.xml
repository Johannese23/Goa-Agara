<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:text="Date"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgNotification"
                android:src="@drawable/ic_search_foreground"
                android:layout_marginRight="5dp"/>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/black"
                    android:id="@+id/titleNotification"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Program Hidroponik Sayur  Cukupi Kebutuhan Desa..."/>

                <TextView
                    android:id="@+id/descNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:fontFamily="@font/worksans_light"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Program hidroponik sayuran mampu mencukupi kebutuhan masyarakat Desa Bambel Aceh Tenggara."
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textColor="@color/green1"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baca selengkapnya "/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text="Love"/>
                </LinearLayout>
            </LinearLayout>

            </LinearLayout>
    </LinearLayout>

</RelativeLayout>