<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/green2"
    tools:context=".ui.layanan.LayananFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:text="1"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"/>

                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="2dp"
                    android:layout_gravity="center"
                    android:layout_height="20dp"
                    android:background="#80FFFFFF"
                    android:id="@+id/your_id"/>
            </LinearLayout>
            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/worksans_regular"
                android:layout_margin="12dp"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih jenis surat yang dibuat."
                android:layout_gravity="top"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:text="2"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="2dp"
                    android:layout_gravity="center"
                    android:layout_height="20dp"
                    android:background="#80FFFFFF"/>
            </LinearLayout>
            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/worksans_regular"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isi form surat yang akan dibuat."
                android:layout_gravity="top"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:text="3"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>

            </LinearLayout>
            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/worksans_regular"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="15dp"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surat yang Anda buat, akan segera diproses oleh staf Desa Anda.       "
                android:layout_gravity="top"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bellow"
        android:layout_below="@+id/top"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/roung_top_corners">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Form Layanan Desa"
            android:fontFamily="@font/worksans_regular"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Jenis Surat"
            android:fontFamily="@font/worksans_regular"
            android:textColor="@color/black"
            android:textSize="16dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jenisSurat"
            android:autofillHints="Pilih Jenis Surat"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Lengkap"/>
            </LinearLayout>
            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. Telephone"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No. Telephone"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIK atau No. KTP"
            android:fontFamily="@font/worksans_regular"
            android:textColor="@color/black"
            android:textSize="16dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan No. KTP"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Selanjutnya"
            android:textSize="15dp"
            android:fontFamily="@font/worksans_regular"
            android:layout_marginTop="20dp" />

    </LinearLayout>
    </RelativeLayout>
</ScrollView>